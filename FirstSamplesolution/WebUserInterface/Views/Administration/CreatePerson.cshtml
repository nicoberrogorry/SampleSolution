@model WebUserInterface.Models.Administration.CreatePersonViewModel

@{
    ViewBag.Title = "CreatePerson";
}

@using (Html.BeginForm("CreatePerson", "PersonController",
        new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,
        new { @class = "form-horizontal", role = "form" }))
{
    @Html.EditorFor(@model => @model.PersonInput.Name)
    <br />
    @Html.EditorFor(@model => @model.PersonInput.LastName)
    <br />
    @Html.DropDownListFor(@model => @model.SelectedProfessionId, new SelectList(Model.AvailableProfessions, "Item1", "Item2", Model.SelectedProfessionId))
    <br />
    @Html.EditorFor(@model => @model.PersonInput.Address)
    <br />
    @Html.EditorFor(@model => @model.PersonInput.CellularPhone)
    <br />
    @Html.EditorFor(@model => @model.PersonInput.Email)
    <br />
    <input type="submit" value="Confirm" class="button button-3d nomargin" />
}